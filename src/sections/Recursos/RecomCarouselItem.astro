---
interface Props {
  id?: string;
  title?: string;
  description?: string;
  textBtn?: string;
  url?: string;
  image?: string;
  dataItem?: string;
}

const { id, title, description, textBtn, url, image, dataItem } = Astro.props;
---

<div
  id={id}
  class="hidden duration-700 ease-in-out"
  data-carousel-item={dataItem}
>
  <div class="absolute inset-0 z-30">
    <div
      class="flex flex-col items-center sm:items-start justify-center h-full py-8 sm:py-16 px-14 sm:px-24 sm:pr-56 md:pr-80 w-full text-start bg-[radial-gradient(rgba(0,_0,_0,_0.4)_0%,_rgba(0,_0,_0,_0.2)_100%)] sm:bg-[linear-gradient(to_right,_rgba(0,_0,_0,_0.5)_50%,_rgba(0,_0,_0,_0)_100%)]"
    >
      <h1
        class="mb-4 text-center sm:text-start text-xl font-medium tracking-tight leading-none text-white md:text-2xl lg:text-4xl dark:text-white"
      >
        {title}
      </h1>
      <p
        class="hidden sm:block mb-8 sm:text-base text-lg font-normal text-gray-200"
      >
        {description}
      </p>
      <div
        class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0"
      >
        <a
          href={url}
          class="group inline-flex justify-center items-center h-8 sm:h-10 px-4 text-sm sm:text-base text-center text-white rounded-xl shadow-md bg-bittersweet-400 dark:bg-cerise-red-500 hover:brightness-90 focus:ring-0 transition-[filter]"
        >
          {textBtn}
          <svg
            class="w-3.5 h-3.5 ms-2 rtl:rotate-180 group-hover:translate-x-2 group-hover:mr-2 transition-[margin,transform]"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <img
    src={image}
    class="absolute block size-full object-cover -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
    alt="..."
  />
</div>
