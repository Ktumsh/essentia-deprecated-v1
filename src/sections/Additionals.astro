        radial-gradient(
          51.31% 143.89% at 49.99% 24.75%,
          #000000 0%,
          #000000 52.6%,
          rgba(0, 0, 0, 0.18) 83.33%,
          rgba(0, 0, 0, 0) 95.31%
        ),
        radial-gradient(
          51.31% 143.89% at 49.99% 24.75%,
          #000000 0%,
          #000000 52.6%,
          rgba(0, 0, 0, 0.18) 83.33%,
          rgba(0, 0, 0, 0) 95.31%
