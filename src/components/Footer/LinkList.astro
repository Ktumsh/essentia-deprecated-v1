---
interface Props {
  href?: string;
  title: string;
  links: {
    text: string;
    href: string;
  }[];
}

const { href, title, links } = Astro.props;
---

<div class="flex flex-col mb-6">
  <div>
    {
      title === "MÃ¡s" ? (
        <div class="border-b inline-block border-transparent text-md mb-2 font-bold">
          {title}
        </div>
      ) : (
        <a
          class="border-b inline-block border-transparent text-md mb-2 font-bold"
          href={href}
        >
          {title}
        </a>
      )
    }
  </div>
  {
    links.map((link) => (
      <div>
        <a
          class="border-b inline-block border-transparent text-sm hover:border-current dark:text-base-color-dark"
          href={link.href}
        >
          {link.text}
        </a>
      </div>
    ))
  }
</div>
