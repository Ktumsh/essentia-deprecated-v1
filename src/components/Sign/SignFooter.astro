---
import Github from "@/icons/github.astro";
import Instagram from "@/icons/instagram.astro";
import X from "@/icons/x.astro";
---

<div
  id="footer"
  class="hidden sm:block absolute self-stretch w-full bottom-0 px-5"
>
  <div class="max-w-[1250px] mx-auto">
    <footer class="relative text-base-color-dark font-normal">
      <div
        class="flex flex-col sm:flex-row justify-between items-center py-6 gap-4"
      >
        <div class="flex items-center justify-start sm:w-[33%] text-sm gap-4">
          <div>
            <a
              class="border-b inline-block border-transparent hover:border-current"
              href=""
              >Privacidad
            </a>
          </div>
          <div>
            <a
              class="border-b inline-block border-transparent hover:border-current"
              href=""
              >Términos
            </a>
          </div>
          <div>
            <a
              class="border-b inline-block border-transparent hover:border-current"
              href=""
              >Cookies
            </a>
          </div>
        </div>
        <div
          class="flex flex-col items-center justify-center order-3 sm:w-[33%] sm:order-none"
        >
          <p class="text-center text-sm antialiased">
            <span>© 2024 Essentia® - Todos los derechos reservados</span>
          </p>
        </div>

        <div class="flex flex-row items-center justify-end sm:w-[33%] gap-x-3">
          <a
            class="hover:text-bittersweet-400 hover:scale-125 transition-all"
            href="https://www.instagram.com/ktumsh/"
            target="_blank"
          >
            <Instagram width="24" height="24" />
          </a>
          <a
            class="hover:text-bittersweet-400 hover:scale-125 transition-all"
            href="https://twitter.com"
            target="_blank"
          >
            <X width="21" height="21" />
          </a>
          <a
            class="hover:text-bittersweet-400 hover:scale-125 transition-all"
            href="https://github.com/Ktumsh/essentia-web"
            target="_blank"
          >
            <Github width="24" height="24" />
          </a>
        </div>
      </div>
    </footer>
  </div>
</div>
