---
import ModalComponent from "@/components/ReactComponents/Modal";
import { HEALTH_MODAL_DATA } from "@/consts/health-modal-data";
import RESOURCES_VIDEOS from "@/consts/resources-videos";
import LiteYouTube from "../LiteYouTube.astro";
const videos =
  RESOURCES_VIDEOS.find((section) => section.section === "HealthWellness")
    ?.videos || [];
---

<section class="px-5 py-6">
  <div class="w-full px-3 mb-8">
    <h3
      class="drop-shadow-md text-base-color dark:text-white text-2xl font-semibold"
    >
      <span
        class="px-2 bg-orient-700 dark:bg-cerise-red-400 text-white dark:text-black"
        >Artículos</span
      > Interesantes
    </h3>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-10">
    {
      HEALTH_MODAL_DATA.map((modal) => {
        return (
          <ModalComponent
            tooltip="Ver artículo"
            modalTitle={modal.modalTitle}
            modalImage={modal.modalImage}
            modalBody={modal.modalBody}
            client:visible
          />
        );
      })
    }
  </div>
</section>
<section class="px-5 py-6">
  <div class="w-full px-3 mb-6">
    <h3
      class="drop-shadow-md text-base-color dark:text-white text-2xl font-semibold"
    >
      <span
        class="px-2 bg-orient-700 dark:bg-cerise-red-400 text-white dark:text-black"
        >Videos</span
      > Recomendados
    </h3>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
    {
      videos.map((video, index) => (
        <>
          {index % 2 !== 0 && (
            <div class="flex flex-col gap-4 py-3">
              <div class="flex flex-col items-end gap-1">
                <span class="text-base-color-m dark:text-base-color-dark-h text-xs font-bold uppercase">
                  reseña
                </span>
                <a href={video.link} class="text-lg text-white font-medium">
                  <span class="bg-orient-700 dark:bg-cerise-red-600/50 backdrop-blur backdrop-saturate-150 py-1 px-3 rounded-br-full rounded-l-full text-ellipsis line-clamp-1">
                    {video.title}
                  </span>
                </a>
              </div>
              <p class="px-3 text-base-color dark:text-white font-light">
                {video.description}
              </p>
            </div>
          )}
          <LiteYouTube
            class="on-scroll"
            videoId={video.link}
            title={video.title}
          />
          {index % 2 === 0 && (
            <div class="flex flex-col gap-4 py-3">
              <div class="flex flex-col gap-1">
                <span class="text-base-color-m dark:text-base-color-dark-h text-xs font-bold uppercase">
                  reseña
                </span>
                <a href={video.link} class="text-lg text-white font-medium">
                  <span class="bg-orient-700 dark:bg-cerise-red-600/50 backdrop-blur backdrop-saturate-150 py-1 px-3 rounded-bl-full rounded-r-full text-ellipsis line-clamp-1">
                    {video.title}
                  </span>
                </a>
              </div>
              <p class="px-3 text-base-color dark:text-white font-light">
                {video.description}
              </p>
            </div>
          )}
        </>
      ))
    }
  </div>
</section>

<section class="px-5 py-6">
  <div class="w-full px-3 mb-6">
    <h3
      class="drop-shadow-md text-base-color dark:text-white text-2xl font-semibold"
    >
      <span
        class="px-2 bg-orient-700 dark:bg-cerise-red-400 text-white dark:text-black"
        >Podcasts</span
      > Recomendados
    </h3>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <iframe
      class="on-scroll rounded-3xl shadow-medium border-2 border-white/30 box-content"
      src="https://open.spotify.com/embed/show/0aNjR24pN6QYOvGjqEZHRh?utm_source=generator"
      width="100%"
      height="352"
      allowfullscreen=""
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
    >
    </iframe>
    <iframe
      class="on-scroll rounded-3xl shadow-medium border-2 border-white/30 box-content"
      src="https://open.spotify.com/embed/show/2nAf8IDQG1sPEwAKdG2DyM?utm_source=generator"
      width="100%"
      height="352"
      allowfullscreen=""
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
    >
    </iframe>
    <iframe
      class="on-scroll rounded-3xl shadow-medium border-2 border-white/30 box-content"
      src="https://open.spotify.com/embed/show/5YdWqfLVaREPm8rgwA2lkE?utm_source=generator"
      width="100%"
      height="352"
      allowfullscreen=""
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
    >
    </iframe>
  </div>
</section>
