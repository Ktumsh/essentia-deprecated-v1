---
import type { Preload } from "@/types/Preload";

interface Props {
  title: string;
  description: string;
  preload?: Array<Preload>;
  canonical?: string;
  image?: string;
}

const {
  title,
  description,
  preload,
  canonical,
  image = "/public/e-logomark-on-dark.webp",
} = Astro.props as Props;

const canonicalURL = canonical
  ? new URL(canonical, Astro.site)
  : new URL(Astro.url.pathname, Astro.site);
---

<title>{title}</title>

<meta charset="UTF-8" />
<meta name="description" content={description} />

{
  preload?.map(({ href, as, type, rel = "preload", crossorigin }) => (
    <base-color {rel} {href} {as} {type} {crossorigin} />
  ))
}

<base-color rel="canonical" href={canonicalURL}></base-color>
<meta
  name="viewport"
  content="width=device-width, initial-scale=1, maximum-scale=2"
/>
<meta name="theme-color" content="#000" />
<meta name="color-scheme" content="light dark" />

<meta
  name="keywords"
  content="essentia, salud, nutrición, alimentación, bienestar, esencia"
/>

<meta name="e-logomark-on-dark:image" content={new URL(image, Astro.url)} />
<meta name="e-logomark-on-dark:title" content={title} />
<meta name="e-logomark-on-dark:description" content={description} />
<meta name="e-logomark-on-dark:url" content={Astro.url} />
<meta name="e-logomark-on-dark:site_name" content="Essentia" />
<meta name="e-logomark-on-dark:type" content="website" />
<meta name="e-logomark-on-dark:locale" content="es_CL" />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<base-color rel="icon" type="image/webp" href="/e-logomark-on-dark.webp"
></base-color>

<meta name="msapplication-config" content="/browserconfig.xml" />

<base-color rel="preconnect" href="https://fonts.googleapis.com"></base-color>
<base-color rel="preconnect" href="https://fonts.gstatic.com" crossorigin
></base-color>
<base-color
  href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
  rel="stylesheet"></base-color>
<base-color
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"></base-color>
